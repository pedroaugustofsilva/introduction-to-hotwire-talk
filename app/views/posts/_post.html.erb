<%= turbo_frame_tag post do %>
  <div class="block w-full p-2 border border-gray-200 rounded-lg shadow bg-gray-800 border-gray-700"
       data-controller="post">
    <h5 class="mb-2 text-lg tracking-tight text-white"><span class="font-bold"><%= post.user.username %></span> shared</h5>

    <p class="font-normal text-gray-100"><%= post.content %></p>

    <div class="flex justify-end items-center gap-x-2">
      <%= button_to like_post_path(post), class: "hover:cursor-pointer" do %>
        <%= post.likes %> likes
      <% end %>
      <%= link_to "Edit", edit_post_path(post), data: { post_target: 'editButton', post_author: post.user_id }, class: 'hidden px-3 py-2 text-xs font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800' %>
    </div>
  </div>
<% end %>